<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="se.jolo.prototypenavigator.activities.MainActivity"
    android:backgroundTint="@color/colorPrimary"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/tvWelcome"
        android:id="@+id/tvWelcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnLoadNewRoute"
        android:id="@+id/btnLoadNewRoute"
        android:layout_above="@+id/btnLoadPreRoute"
        android:layout_alignParentStart="true"
        android:theme="@style/button"
        style="@style/Widget.AppCompat.Button.Colored"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnLoadPreRoute"
        android:id="@+id/btnLoadPreRoute"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/button"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnrLoadRoute"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:popupTheme="@android:anim/cycle_interpolator"
        style="?android:attr/spinnerItemStyle"
        android:backgroundTint="@color/colorAccent2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_above="@+id/btnLoadNewRoute"
        android:layout_alignParentEnd="true" />


</RelativeLayout>